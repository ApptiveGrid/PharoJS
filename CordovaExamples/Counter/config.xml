<?xml version='1.0' encoding='utf-8'?>
<widget id="org.pharojs.counter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PharoJS Counter</name>
    <description>
        A sample PharoJS application based on Apache Cordova.
    </description>
    <author email="" href="http://pharojs.org">
        PharoJS Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="/res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="/res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="/res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="/res/icon/android/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="/res/icon/ios/icon-57.png" width="57" />
        <icon height="114" src="/res/icon/ios/icon-57-2x.png" width="114" />
        <icon height="72" src="/res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="/res/icon/ios/icon-72-2x.png" width="144" />
    </platform>
    <engine name="android" spec="^7.1.4" />
    <engine name="ios" spec="^4.5.5" />
</widget>
